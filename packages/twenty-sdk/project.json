{
  "name": "twenty-sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/twenty-sdk/src",
  "projectType": "library",
  "tags": ["scope:sdk"],
  "targets": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"]
    },
    "regenerate:metadata": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx wait-on http://localhost:3000/healthz --timeout 600000 --interval 1000 --log && npx genql --endpoint http://localhost:3000/metadata --output src/generated/metadata",
        "cwd": "{projectRoot}"
      },
      "dependsOn": [
        {
          "target": "start:ci-if-needed",
          "projects": "twenty-server"
        }
      ]
    },
    "typecheck": {},
    "lint": {
      "options": {},
      "configurations": {
        "fix": {}
      }
    },
    "fmt": {
      "options": {
        "files": "src"
      },
      "configurations": {
        "fix": {}
      }
    }
  }
}
